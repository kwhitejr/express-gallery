extends ./layout/layout.jade

block title
  title Put

block content
  h1 Put Request
  p= description
  img(src= link)
  p by #{author}
  h2 Edit?
  form(method="POST", action="/gallery/#{id}?_method=PUT")
    input(type="text", name="author", value=author placeholder="edit author name")
    br
    input(type="text", name="photo", value=link)
    br
    input(type="text", name="description", value=description)
    br
    input(type="submit" value="submit put request")